// schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(donor)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  donor
  charity
  admin
}